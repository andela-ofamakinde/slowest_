<%= will_paginate @authors %>
<div class="author">
  <% cache(cache_key_for_authors) do %>
   <% @authors.each do |author| %>
      <h2>My name is <%= author.name %></h2>
      <% author.articles.each do |article| %>
      <% cache article do %>
        <p>I wrote: <span style="text-decoration: underline"><%= link_to article.name, articles_show_path(article) %> </span></p>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
<%= will_paginate @authors %>

<%= will_paginate @authors %>
<div class="author">
  <% @authors.each do |author| %>
    <% cache author do %>
      <h2>My name is <%= author.name %></h2>
      <% author.articles.each do |article| %>
        <% cache article do %>
        <p>I wrote: <span style="text-decoration: underline"><%= link_to article.name, articles_show_path(article) %> </span></p> 
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
<%= will_paginate @authors %>

@authors = Author.includes(:articles).all.paginate(:page => params[:page], :per_page => 30)
